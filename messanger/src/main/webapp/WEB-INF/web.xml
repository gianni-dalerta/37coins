<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Application to handle Message Sending</display-name>
	
	<filter>
		<filter-name>guiceFilter</filter-name>
		<filter-class>com._37coins.Filter</filter-class>
	</filter>
	
	<filter-mapping>
		<filter-name>guiceFilter</filter-name>
		<url-pattern>/rest/*</url-pattern>
	</filter-mapping>
	

	<listener>
		<listener-class>com._37coins.MailServletConfig</listener-class>
	</listener>

</web-app>
